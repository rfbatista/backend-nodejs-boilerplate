{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "target": "ES2020",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@context/*": ["context/*"],
      "@shared/*": ["shared/*"],
      "@modules/*": ["modules/*"],
      "@infrastructure/*": ["infrastructure/*"]
    }
  },
  "include": ["src"],
  "exclude": []
}
